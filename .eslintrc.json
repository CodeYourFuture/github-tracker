{
  "extends": "@codeyourfuture/standard",
  "env": {
    "es2022": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "import"
  ],
  "rules": {
    "import/order": [
      "error",
      {
              "alphabetize": { "caseInsensitive": true, "order": "asc" },
              "groups": ["builtin", "external", "parent", ["sibling", "index"]],
              "newlines-between": "always"
      }
    ]
  }
}
